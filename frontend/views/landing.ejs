<% include partials/header %>

<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to NBA Fans</h1>
            <p>Real time fans interaction from all over the world</p>
            <p>
                <a class = "btn btn-primary " href = "/search/new"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>  Search</a>
            </p>
        </div>
    </header>
    
    <!--<div class = "row">-->
    <!--    <div class = "col-lg-12" id = "nbatitle">-->
    <!--        <h2><center>Matches</center></h2>-->
